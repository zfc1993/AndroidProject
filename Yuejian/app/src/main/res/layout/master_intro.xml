<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/top_c">
        <include layout="@layout/simp_top"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/master_intro_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/test"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/top_c">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:text="大师介绍"
                android:id="@+id/simp_title" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fadeScrollbars="true">
            <TextView
                android:id="@+id/master_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/main_text"
                android:textSize="16sp"
                android:text=""/>
        </ScrollView>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@color/top_c">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:text="❤ 帝豪射箭中心（大连市民航疗养院对面）"
                    android:id="@+id/simp_loc" />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/bg_gray"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/master_class_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/master_class_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="大师课堂"/>
                <ImageView
                    android:id="@+id/master_class_line"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:scaleType="fitXY"
                    android:background="@drawable/line_checked"/>
                <ImageView
                    android:layout_width="0.2dp"
                    android:layout_height="38dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/colorUnChecked"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/master_qa_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/master_qa_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorUnChecked"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="我有问题问大师"/>
                <ImageView
                    android:id="@+id/master_qa_line"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:scaleType="fitXY"
                    android:background="@drawable/line_unchecked"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp">
                <com.jcodecraeer.xrecyclerview.XRecyclerView
                    android:id="@+id/master_class_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.jcodecraeer.xrecyclerview.XRecyclerView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qa_submit_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="invisible">
            <EditText
                android:id="@+id/qa_edit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:textSize="16sp"
                android:hint="我有问题问大师"/>
            <Button
                android:id="@+id/qa_submit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="180dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="提交"/>
        </LinearLayout>


    </LinearLayout>
>
</ScrollView>
